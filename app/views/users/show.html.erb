<body class="h-screen overflow-hidden bg-gray-100">
  <div class="flex items-center justify-center h-full">
    <div class="max-w-md w-full bg-gray-200 p-6 rounded-lg shadow-md relative -mt-10">
      <div class="flex flex-col items-center">
        <div class="relative">
          <%= image_tag current_user.avatar.attached? ? current_user.avatar : "default_profile_pic.jpg", 
            class: "w-24 h-24 rounded-full border" %>
        </div>
        <h3 class="text-lg font-semibold mt-3"><%= current_user.name %></h3>
      </div>

      <div class="mt-4">
        <p class="text-gray-600"><strong>Phone:</strong> <%= current_user.phone_number %></p>
        <p class="text-gray-600"><strong>Email:</strong> <%= current_user.email %></p>
      </div>

      <div class="mt-4 bg-gray-100 p-3 rounded-lg flex justify-between items-center">
        <p class="text-sm text-gray-700"><%= current_user.bio.presence || "No bio available" %></p>
        <%= link_to edit_user_registration_path do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 hover:text-gray-700" 
            viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.414 2.586a2 2 0 00-2.828 0L4 13.172V16h2.828l10.586-10.586a2 2 0 000-2.828zM3 18h14a1 1 0 100-2H3a1 1 0 100 2z"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</body>
