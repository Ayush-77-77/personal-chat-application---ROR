<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, autofocus: true, class: "mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
      </div>
      <div>
        <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :phone_number, class: "mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
      </div>
      
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 w-full p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300" %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
